<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend stock.lot form to show insulin pump fields -->
    <record id="view_stock_lot_form_insulin_pump" model="ir.ui.view">
        <field name="name">stock.lot.form.insulin.pump</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_unassign_device" string="Unassign Device" type="object" invisible="not is_insulin_pump or pump_state != 'assigned'"/>
                    <button name="action_scrap_device" string="Scrap Device" type="object" invisible="not is_insulin_pump or pump_state == 'scrapped'"/>
                    <button name="action_replace_device_wizard" string="Replace Device" type="object" invisible="not is_insulin_pump or pump_state != 'assigned' or assignment_type != 'primary'"/>
                </header>
            </xpath>
            <xpath expr="//group[@name='main_group']" position="after">
                <group string="Insulin Pump Info" invisible="not is_insulin_pump">
                    <group>
                        <field name="is_insulin_pump" invisible="1"/>
                        <field name="is_rma_device" readonly="1"/>
                        <field name="pump_state"/>
                        <field name="assignment_type" invisible="pump_state != 'assigned'"/>
                    </group>
                    <group>
                        <field name="assigned_patient_id" invisible="pump_state != 'assigned'" options="{'no_create': True}"/>
                        <field name="installation_date" invisible="pump_state != 'assigned'"/>
                        <field name="lifespan_years" invisible="pump_state != 'assigned'"/>
                        <field name="replacement_date" invisible="pump_state != 'assigned'"/>
                        <field name="replacement_alert" invisible="1"/>
                    </group>
                </group>
                <div class="alert alert-warning mb-0" role="alert" invisible="not replacement_alert or pump_state != 'assigned'">
                    <strong>Warning!</strong> This device is approaching its replacement date (<field name="replacement_date" readonly="1"/>).
                </div>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Linked Patient Information" name="linked_patient_info" invisible="not is_insulin_pump">
                    <field name="assignment_log_ids" readonly="1">
                        <list>
                            <field name="patient_internal_id" string="Patient ID"/>
                            <field name="patient_id" string="Patient Name"/>
                            <field name="assignment_type"/>
                            <field name="installation_date"/>
                            <field name="replacement_date"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Insulin Pump Equipment list view -->
    <record id="view_stock_lot_tree_insulin_pumps" model="ir.ui.view">
        <field name="name">stock.lot.tree.insulin.pumps</field>
        <field name="model">stock.lot</field>
        <field name="arch" type="xml">
            <list string="Insulin Pump Equipment">
                <field name="patient_internal_id"/>
                <field name="assigned_patient_id" string="Patient Name"/>
                <field name="name" string="Equipment SN"/>
                <field name="product_id"/>
                <field name="is_rma_device" optional="hide"/>
                <field name="pump_state" widget="badge" decoration-success="pump_state == 'available'" decoration-warning="pump_state == 'assigned'" decoration-danger="pump_state == 'scrapped'"/>
                <field name="assignment_type"/>
                <field name="installation_date"/>
                <field name="replacement_date" decoration-danger="replacement_alert"/>
                <field name="replacement_alert" column_invisible="1"/>
                <field name="activity_ids" widget="list_activity"/>
            </list>
        </field>
    </record>

    <!-- Insulin Pump Equipment Kanban View (Dashboard) -->
    <record id="view_stock_lot_kanban_insulin_pumps" model="ir.ui.view">
        <field name="name">stock.lot.kanban.insulin.pumps</field>
        <field name="model">stock.lot</field>
        <field name="arch" type="xml">
            <kanban default_group_by="pump_state" class="o_kanban_dashboard">
                <field name="pump_state"/>
                <field name="name"/>
                <field name="assigned_patient_id"/>
                <field name="assignment_type"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="assigned_patient_id"/>
                                </div>
                                <div>
                                    <field name="assignment_type"/>
                                </div>
                                <div class="mt-2">
                                    <field name="pump_state" widget="badge" decoration-success="pump_state == 'available'" decoration-warning="pump_state == 'assigned'" decoration-danger="pump_state == 'scrapped'"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Insulin Pump Equipment search view -->
    <record id="view_stock_lot_search_insulin_pumps" model="ir.ui.view">
        <field name="name">stock.lot.search.insulin.pumps</field>
        <field name="model">stock.lot</field>
        <field name="arch" type="xml">
            <search string="Search Equipment">
                <field name="name" string="Serial Number"/>
                <field name="product_id"/>
                <field name="assigned_patient_id"/>
                <filter string="Available" name="filter_available" domain="[('pump_state', '=', 'available')]"/>
                <filter string="Assigned" name="filter_assigned" domain="[('pump_state', '=', 'assigned')]"/>
                <filter string="Scrapped" name="filter_scrapped" domain="[('pump_state', '=', 'scrapped')]"/>
                <separator/>
                <filter string="Primary Devices" name="filter_primary" domain="[('assignment_type', '=', 'primary')]"/>
                <filter string="Holiday Pumps" name="filter_holiday" domain="[('assignment_type', '=', 'holiday')]"/>
                <filter string="RMA Devices" name="filter_rma" domain="[('is_rma_device', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by': 'pump_state'}"/>
                    <filter string="Assignment Type" name="group_assignment_type" context="{'group_by': 'assignment_type'}"/>
                    <filter string="Product" name="group_product" context="{'group_by': 'product_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Equipment menu action -->
    <record id="action_insulin_pump_equipment" model="ir.actions.act_window">
        <field name="name">Equipment</field>
        <field name="res_model">stock.lot</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('is_insulin_pump', '=', True)]</field>
        <field name="context">{'search_default_group_state': 1, 'display_complete': True}</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_stock_lot_kanban_insulin_pumps')}),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_stock_lot_tree_insulin_pumps')})]"/>
        <field name="search_view_id" ref="view_stock_lot_search_insulin_pumps"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No insulin pump equipment found.
            </p>
            <p>
                Equipment is created by adding serial numbers to insulin pump products in inventory.
            </p>
        </field>
    </record>

    <!-- Server Actions for Equipment -->
    <record id="action_unassign_device_server" model="ir.actions.server">
        <field name="name">Unassign Device</field>
        <field name="model_id" ref="stock.model_stock_lot"/>
        <field name="binding_model_id" ref="stock.model_stock_lot"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            action = records.action_unassign_device()
        </field>
    </record>

    <record id="action_replace_device_server" model="ir.actions.server">
        <field name="name">Replace Device</field>
        <field name="model_id" ref="stock.model_stock_lot"/>
        <field name="binding_model_id" ref="stock.model_stock_lot"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">
            if len(records) == 1:
                action = records.action_replace_device_wizard()
        </field>
    </record>

    <record id="action_scrap_device_server" model="ir.actions.server">
        <field name="name">Scrap Device</field>
        <field name="model_id" ref="stock.model_stock_lot"/>
        <field name="binding_model_id" ref="stock.model_stock_lot"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            action = records.action_scrap_device()
        </field>
    </record>

    <!-- Add Equipment menu item -->
    <menuitem id="menu_equipment"
        name="Equipment"
        parent="menu_insulin_pumps_root"
        action="action_insulin_pump_equipment"
        sequence="10"/>
</odoo>
