<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_replace_device_wizard_form" model="ir.ui.view">
        <field name="name">insulin.replace.device.wizard.form</field>
        <field name="model">insulin.replace.device.wizard</field>
        <field name="arch" type="xml">
            <form string="Replace Device">
                <sheet>
                    <div class="oe_title">
                        <h1>Replace Primary Device</h1>
                    </div>
                    <group>
                        <group string="Current Device Information">
                            <field name="old_device_id" readonly="1"/>
                            <field name="patient_id" readonly="1"/>
                            <field name="patient_internal_id" readonly="1"/>
                            <field name="installation_date" readonly="1"/>
                        </group>
                        <group string="Replacement Details">
                            <field name="replacement_reason" required="1"/>
                            <field name="new_device_id" 
                                   required="1"
                                   options="{'no_create': True, 'no_create_edit': True}"
                                   placeholder="Select RMA replacement device..."/>
                        </group>
                    </group>
                    <group>
                        <field name="replacement_notes" 
                               placeholder="Add any additional notes about the replacement here..."
                               colspan="2"/>
                    </group>
                    <div class="alert alert-info" role="alert">
                        <strong>Note:</strong> Only RMA replacement devices that are currently available can be selected. 
                        The old device will be transferred to the return location.
                    </div>
                </sheet>
                <footer>
                    <button name="action_replace" 
                            string="Confirm Replacement" 
                            type="object" 
                            class="btn-primary"
                            confirm="Are you sure you want to replace this device? This action cannot be undone."/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

