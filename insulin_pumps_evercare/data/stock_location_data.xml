<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Parent Location: Evercare Medical -->
        <record id="stock_location_evercare_medical" model="stock.location">
            <field name="name">Evercare Medical</field>
            <field name="usage">internal</field>
            <field name="location_id" ref="stock.stock_location_stock"/>
        </record>

        <!-- Insulin Pumps Storage Location (Default Return Location) -->
        <record id="stock_location_insulin_pumps" model="stock.location">
            <field name="name">Insulin Pumps</field>
            <field name="usage">internal</field>
            <field name="location_id" ref="stock_location_evercare_medical"/>
        </record>

        <!-- Returns Location -->
        <record id="stock_location_returns" model="stock.location">
            <field name="name">Returns</field>
            <field name="usage">internal</field>
            <field name="location_id" ref="stock_location_insulin_pumps"/>
        </record>

        <!-- RMA Devices Location -->
        <record id="stock_location_rma" model="stock.location">
            <field name="name">RMA Devices</field>
            <field name="usage">internal</field>
            <field name="location_id" ref="stock_location_insulin_pumps"/>
        </record>

        <!-- Available Devices Location -->
        <record id="stock_location_available" model="stock.location">
            <field name="name">Available Devices</field>
            <field name="usage">internal</field>
            <field name="location_id" ref="stock_location_insulin_pumps"/>
        </record>

        <!-- Assigned Devices (Virtual tracking location) -->
        <record id="stock_location_assigned" model="stock.location">
            <field name="name">Assigned to Patients</field>
            <field name="usage">internal</field>
            <field name="location_id" ref="stock_location_insulin_pumps"/>
        </record>

        <!-- Scrapped Devices Location -->
        <record id="stock_location_scrapped" model="stock.location">
            <field name="name">Scrapped Devices</field>
            <field name="usage">inventory</field>
            <field name="location_id" ref="stock_location_insulin_pumps"/>
        </record>
    </data>
</odoo>
