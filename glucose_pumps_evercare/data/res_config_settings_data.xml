<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Enable Lots & Serial Numbers and Multi-Locations -->
        <!-- Add both groups to base.group_user implied groups -->
        <function model="res.users" name="write">
            <value eval="[ref('base.user_admin')]"/>
            <value eval="{'groups_id': [(4, ref('stock.group_production_lot')), (4, ref('stock.group_stock_multi_locations'))]}"/>
        </function>
        
        <!-- Also set as default for all internal users -->
        <record id="base.group_user" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('stock.group_production_lot')), (4, ref('stock.group_stock_multi_locations'))]"/>
        </record>
    </data>
</odoo>
